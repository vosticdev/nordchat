# NordChat Server Environment Configuration
# Copy this file to .env and update the values

# JWT Secret Key (REQUIRED - Change this in production!)
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production

# Server Port (Optional - defaults to 5000)
PORT=5000

# Environment Mode (Optional - defaults to development)
NODE_ENV=development

# CORS Origin (Optional - defaults to http://localhost:3000)
CORS_ORIGIN=http://localhost:3000

# Database Configuration (Future versions)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=nordchat
# DB_USER=postgres
# DB_PASSWORD=your-db-password

# Redis Configuration (Future versions)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password

# Email Configuration (Future versions)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-email-password

# Security Settings
# SESSION_SECRET=your-session-secret
# COOKIE_SECRET=your-cookie-secret
